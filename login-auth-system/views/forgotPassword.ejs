<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta
      name="description"
      content="Login Auth System is a Induction Company"
    />
    <meta name="keywords" content="Login Auth System admin panel" />
    <meta name="author" content="Decoders" />
    <meta
      name="viewport"
      content="width=device-width, initial-scale=1.0, user-scalable=0, minimal-ui"
    />
    <title>Login Auth System</title>
    <!-- Fevicon -->
    <link rel="shortcut icon" href="assets/images/favicon.ico" />
    <!-- Start css -->
    <link
      href="assets/css/bootstrap.min.css"
      rel="stylesheet"
      type="text/css"
    />
    <link href="assets/css/icons.css" rel="stylesheet" type="text/css" />
    <link href="assets/css/style.css" rel="stylesheet" type="text/css" />
    <!-- End css -->
  </head>
  <body class="vertical-layout">
    <div id="loader" style="display: none">
      <div class="spinner"></div>
      <!-- Customize the spinner as per your design -->
    </div>
    <!-- Start Containerbar -->
    <div id="containerbar" class="containerbar authenticate-bg">
      <!-- Start Container -->
      <div class="container">
        <div class="auth-box forgot-password-box">
          <!-- Start row -->
          <div class="row no-gutters align-items-center justify-content-center">
            <!-- Start col -->
            <div class="col-md-6 col-lg-5">
              <!-- Start Auth Box -->
              <div class="auth-box-right">
                <div class="card">
                  <div class="card-body">
                    <form action="#">
                      <div class="form-head">
                        <a href="dashboard" class="logo"
                          ><img
                            src="assets/images/logo.jpg"
                            class="img-fluid"
                            alt="logo"
                        /></a>
                      </div>
                      <h4 class="text-primary my-4">Forgot Password ?</h4>
                      <p class="mb-4">
                        Enter the email address below to receive reset password
                        instructions.
                      </p>
                      <div class="form-group">
                        <input
                          type="email"
                          class="form-control"
                          id="email"
                          placeholder="Email ID"
                          required
                        />
                      </div>
                      <button
                        type="submit"
                        class="btn btn-success btn-lg btn-block font-18"
                      >
                        Send Email
                      </button>
                    </form>
                    <p class="mb-0 mt-3">
                      Remember Password? <a href="login">Log in</a>
                    </p>
                  </div>
                </div>
              </div>
              <!-- End Auth Box -->
            </div>
            <!-- End col -->
          </div>
          <!-- End row -->
        </div>
      </div>
      <!-- End Container -->
    </div>
    <!-- End Containerbar -->
    <!-- Start js -->
    <script src="/js/axios.min.js"></script>
    <script src="/js/forgot-password.js"></script>

    <script src="assets/js/jquery.min.js"></script>
    <script src="assets/js/popper.min.js"></script>
    <script src="assets/js/bootstrap.min.js"></script>
    <script src="assets/js/modernizr.min.js"></script>
    <script src="assets/js/detect.js"></script>
    <script src="assets/js/jquery.slimscroll.js"></script>
    <!-- End js -->
  </body>
</html>
